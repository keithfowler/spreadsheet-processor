{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "mapRoot": "./dist",
        "outDir": "./dist",
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}